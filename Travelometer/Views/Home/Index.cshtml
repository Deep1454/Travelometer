@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="text-center mb-5">
                <h1>Welcome to Travelometer!</h1>
                <p class="lead">Your one-stop destination for all your travel needs.</p>
                <p>Choose an option below to get started:</p>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center bg-light">
                <div class="card-body">
                    <i class="fas fa-user-plus fa-4x mb-4 text-primary"></i>
                    <h5 class="card-title">Add Guest User</h5>
                    <p class="card-text">Add a new guest user to the system.</p>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Guest" asp-action="Add">Add Guest</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-center bg-light">
                <div class="card-body">
                    <i class="fas fa-search fa-4x mb-4 text-primary"></i>
                    <h5 class="card-title">Search Flight</h5>
                    <p class="card-text">Search for available flights.</p>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Flight" asp-action="Search">Search Flight</a>
                </div>
            </div>
        </div>
    </div>
</div>
