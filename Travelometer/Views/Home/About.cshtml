@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .card {
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .card-text {
        font-size: 16px;
        color: #555;
        margin-bottom: 15px;
    }

    .card-link {
        display: block;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .card-link:hover {
            background-color: #0056b3;
        }

        .card-link:focus {
            outline: none;
            box-shadow: none;
        }

    .icon {
        font-size: 4rem;
        margin-bottom: 20px;
        color: #007bff;
    }
</style>

<h1 class="text-center mt-5">Admin Dashboard</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="icon fas fa-plane"></i>
                    <h5 class="card-title">Add Flight</h5>
                    <p class="card-text">Add a new flight to the system.</p>
                    <a class="card-link" asp-area="" asp-controller="Flight" asp-action="Add">Add Flight</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="icon fas fa-car"></i>
                    <h5 class="card-title">Add Car</h5>
                    <p class="card-text">Add a new car to the system.</p>
                    <a class="card-link" asp-area="" asp-controller="Car" asp-action="Add">Add Car</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="icon fas fa-hotel"></i>
                    <h5 class="card-title">Add Hotel</h5>
                    <p class="card-text">Add a new hotel to the system.</p>
                    <a class="card-link" asp-area="" asp-controller="Hotel" asp-action="Add">Add Hotel</a>
                </div>
            </div>
        </div>
    </div>
</div>
